# Base class representing a generic digital content item with a tuple of metrics
# quality_score that reflects the perceived quality of the content
class ContentItem:
    def __init__(self, metrics, quality_score):
        # Object attibutes
        self.metrics = metrics
        self.quality_score = quality_score

    # Placeholder
    def reach_score(self):
        pass

    # Placeholder
    def engagement_score(self):
        pass

    # Textual representation of a digital content item
    def __repr__(self):
        """
        Generic description of the item
        """
        info = f"ContentItem with metrics: {self.metrics} and quality score: {self.quality_score}"
        return info
        

# BlogPost class inheriting from ContentItem.
# Implements reach and engagement based on typical text‑content logic.
class BlogPost(ContentItem):
    # Engagement = sum of metrics (clicks + shares + comments...)
    def engagement_score(self):
        return self.metrics[0] + self.metrics[1] + self.metrics[2]

    # Reach = impressions * quality_score / 2
    def reach_score(self):
        return self.metrics[0] * self.quality_score / 2

    # Specific representation of blog post
    def __repr__(self):
        blog = f"BlogPost with metrics {self.metrics} and quality score {self.quality_score} has engagement of {self.engagement_score()} and reach of {self.reach_score()}"
        return blog


# VideoContent class inheriting from ContentItem.
# Implements reach and engagement based on video‑content logic.
class VideoContent(ContentItem):
    # Engagement = views * 4 (bigger weight for video content)
    def engagement_score(self):
        return self.metrics[0] * 4

    # Reach = views * retention_rate (in this case, views * views)
    def reach_score(self):
        return self.metrics[0] * self.metrics[0]

    # Specific representation of a video content item
    def __repr__(self):
        video = f"VideoContent with views {self.metrics[0]} has engagement of {self.engagement_score()} and reach of {self.reach_score()}"
        return video


# Creating a blog post and a video with random metrics
blog = BlogPost((24000, 1300, 450), 0.8)
video = VideoContent((13000, 2600, 2100, 6000), 0.9)

# Printing textual representations of the objects
print(blog)
print(video)
